{
  "cli": {
    "version": ">= 12.0.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "simulator": false
      },
      "android": {
        "buildType": "apk",
        "gradleProperties": {
          "android.enableProguardInReleaseBuilds": "true",
          "android.enableR8.fullMode": "true"
        }
      }
    },
    "production": {
      "distribution": "store",
      "ios": {
        "resourceClass": "m-medium"
      },
      "android": {
        "buildType": "apk",
        "gradleProperties": {
          "android.enableProguardInReleaseBuilds": "true",
          "android.enableR8.fullMode": "true"
        }
      }
    }
  }
}
